<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation_drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.hoschtettler.jacques.mynews.Controllers.Activities.MainActivity">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/main_activity_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple"
            TabLayout_tabTextColor="@color/green"
            TabLayout_tabSelectedTextColor="@color/white"
            TabLayout_tabIndicatorColor="@color/colorPrimaryDark"
            >
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:name="com.hoschtettler.jacques.mynews.Controllers.Fragments.TopStoriesFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_display_view_pager"
        />

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/navigation_view_layout"
        android:fitsSystemWindows="true"
        NavigationView_headerLayout="@layout/nav_header"
        NavigationView_menu="@menu/menu_drawer"
    />
</androidx.drawerlayout.widget.DrawerLayout>
